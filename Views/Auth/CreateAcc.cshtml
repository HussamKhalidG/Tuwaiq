@using Website1.Helpers
@model CreateAccVM

<form method="post" enctype="multipart/form-data">
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Email" class=" form-control-plaintext" id="staticEmail" value="email@example.com">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" asp-for="Password" class="form-control" id="inputPassword">
        </div>
    </div>
    <div>
        <label asp-for="Role"></label>
        <select class="form-select" asp-for="Role" asp-items="new SelectList(Enum.GetNames<AppRoles>())">
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formFile" class="form-label">Default file input example</label>
        <input class="form-control" asp-for="ProfilePicture" type="file" id="formFile">
    </div>
    <div class="pt-2">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>